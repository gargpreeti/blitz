<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="History Detail"
                android:textSize="16dp"
                android:textColor="#000000"
            android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"/>
</RelativeLayout>

            <LinearLayout
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/tv_saleheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sale Heading"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                       />


                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/txt_saleheading"
                        android:layout_toRightOf="@+id/tv_saleheading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dummytext"
                        android:textSize="14dp"
                        android:textColor="#808080"
                        android:gravity="center"
                        android:layout_marginLeft="60dp"
                        />

                    <LinearLayout
                        android:id="@+id/line_sale"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tv_saleheading"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <com.zoptal.blitz.common.MyTextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/tv_companycategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company Category"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/line_sale"
                        />
                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/txt_companycat"
                        android:layout_toRightOf="@+id/tv_companycategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dummytext"
                        android:textSize="14dp"
                        android:textColor="#808080"
                        android:gravity="center"
                        android:layout_below="@+id/line_sale"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="25dp"
                        />

                    <LinearLayout
                        android:id="@+id/line_cmpnycat"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tv_companycategory"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <com.zoptal.blitz.common.MyTextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/tv_salesdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sale Description"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/line_cmpnycat"
                        />

                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/txt_saledesc"
                        android:layout_toRightOf="@+id/tv_salesdec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dummytext"
                        android:textSize="14dp"
                        android:textColor="#808080"
                        android:gravity="center"
                        android:layout_below="@+id/line_cmpnycat"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="40dp"
                        />
                    <LinearLayout
                        android:id="@+id/line_saledesc"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tv_salesdec"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <com.zoptal.blitz.common.MyTextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/tv_storename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store name"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/line_saledesc"
                        />

                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/txt_storename"
                        android:layout_toRightOf="@+id/tv_storename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dummytext"
                        android:textSize="14dp"
                        android:textColor="#808080"
                        android:gravity="center"
                        android:layout_below="@+id/line_saledesc"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="72dp"
                        />
                    <LinearLayout
                        android:id="@+id/line_storename"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/tv_storename"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>

                    <com.zoptal.blitz.common.MyTextView
                        android:layout_marginTop="20dp"
                        android:id="@+id/tv_storaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store Address"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@+id/line_storename"
                        />
                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/txt_storeaddress"
                        android:layout_toRightOf="@+id/tv_storaddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dummytext"
                        android:textSize="14dp"
                        android:textColor="#808080"
                        android:gravity="center"
                        android:layout_below="@+id/line_storename"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="72dp"
                        />
                    <LinearLayout
                        android:id="@+id/line_storeaddress"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txt_storeaddress"
                        android:background="@android:color/darker_gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"></LinearLayout>
                </RelativeLayout>

        </LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>