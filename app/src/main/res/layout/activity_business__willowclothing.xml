<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:id="@+id/img_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/logout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/relative_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textSize="16dp"
                android:textColor="#ffffff"
               android:layout_below="@+id/img_logout"
              android:layout_marginLeft="12dp"/>

                <ImageView
                    android:id="@+id/img_notification"
                    android:layout_alignParentRight="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                  android:background="@mipmap/notification"
                    android:textSize="16dp"
                    android:layout_marginRight="12dp"
                    android:textColor="#ffffff"
                    android:layout_below="@+id/img_logout"
                    android:layout_marginLeft="12dp"/>
                </RelativeLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/img_profile"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/profile_icon"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"/>

    <com.zoptal.blitz.common.MyTextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Setting"
        android:textSize="16dp"
        android:textColor="#ffffff"
       android:layout_toLeftOf="@+id/img_profile"
        android:layout_marginTop="22dp"
        android:layout_marginRight="15dp"/>
</RelativeLayout>


       <com.zoptal.blitz.common.MyTextView
        android:id="@+id/tv_companyinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint=""
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
    />
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/line_1"/>

            <com.zoptal.blitz.common.MyTextView
             android:id="@+id/tv_remaining"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:hint="Remaining Credits: 10"
             android:textColor="#ffffff"
             android:layout_gravity="center_horizontal"
             android:textSize="16dp"
             />

   <ImageView
       android:id="@+id/img2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
     android:layout_gravity="center"
       android:layout_marginTop="5dp"
       android:background="@mipmap/line_1"/>


            <LinearLayout
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_createadv"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:background="@mipmap/createadv"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/img_advbalance"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:background="@mipmap/advbalance"
        android:layout_weight="1"/>

</LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_advhistory"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:background="@mipmap/advhistory"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/img_stats"
                    android:layout_width="150dp"
                    android:layout_height="160dp"
                    android:background="@mipmap/stats"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.zoptal.blitz.common.MyTextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Setting"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_weight="1"/>


                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/profile_icon"
                    android:layout_weight="1"/>
            </LinearLayout>
</LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>