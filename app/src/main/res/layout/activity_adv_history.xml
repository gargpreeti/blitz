<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">


    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:textColor="#000000"
            android:layout_marginTop="10dp"
                android:gravity="center"
           android:layout_centerHorizontal="true"/>

</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#a9a9a9"/>
            <LinearLayout
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha="0.5"
                android:background="#a9a9a9"/>

            <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advertisment History"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>


            <LinearLayout
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha="0.5"
                android:background="#a9a9a9"/>


            <RelativeLayout
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textfieldborder"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_cmpnyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Company name"
                    android:textSize="14dp"
                    android:textColorHint="#808080"
                    android:textColor="#808080"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"

                    android:layout_centerHorizontal="true"/>




            </RelativeLayout>
            <com.zoptal.blitz.common.MyTextView
                android:visibility="gone"
                android:id="@+id/tv_msgnohistory"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="No History found"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ListView
                 android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:focusable="true"
                android:dividerHeight="5dp"
                android:divider="@android:color/transparent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:scrollbars="vertical">

            </ListView>

        </LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>