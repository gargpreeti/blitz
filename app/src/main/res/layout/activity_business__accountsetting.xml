<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Setting"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:gravity="center"
           android:layout_centerHorizontal="true"/>
</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/user_img"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/user"
                android:layout_gravity="center"
                               />
            <com.zoptal.blitz.common.MyTextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="user name"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_marginTop="8dp"/>
            <RelativeLayout
            android:id="@+id/relative_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="ACCOUNT"
                android:textColor="#808080"
                android:textSize="16dp"/>


                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nxtarrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
       </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relative_changepw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="CHANGE PASSWORD"
                    android:textColor="#808080"
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nxtarrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_businesssetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="BUSINESS SETTING"
                    android:textColor="#808080"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nxtarrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_storesetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="STORE SETTING"
                    android:textColor="#808080"
                    android:textSize="16dp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nxtarrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_howtopost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="HOW TO POST A SALE"
                    android:textColor="#808080"
                    android:textSize="16dp"/>

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/nxtarrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </RelativeLayout>
</LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>