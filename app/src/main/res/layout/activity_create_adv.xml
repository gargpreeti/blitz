<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">

     <RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>


            <LinearLayout
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha="0.7"
                android:background="#a9a9a9"/>

            <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create an Advertisement"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>


            <LinearLayout
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha="0.7"
                android:background="#a9a9a9"/>


            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_saleheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Sales Headline"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:capitalize="sentences"
                android:imeOptions="actionNext"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:textSize="14dp"
                android:textCursorDrawable="@drawable/blackcursor"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#a9a9a9"/>
            <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[max 60 character]"
                android:textSize="10dp"
                android:textColor="#808080"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"/>


            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_saledesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Sales Description"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:singleLine="true"
                android:capitalize="sentences"
                android:imeOptions="actionNext"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:textSize="14dp"
                android:textCursorDrawable="@drawable/blackcursor"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#a9a9a9"/>
