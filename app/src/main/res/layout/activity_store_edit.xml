<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#a9a9a9"/>



            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textfieldborderclr"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_storename"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textSize="14dp"
                    android:hint="xy store"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textfieldborderclr"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_address"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textSize="14dp"
                    android:hint="Address"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textfieldborderclr"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_phoneno"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textSize="14dp"
                    android:hint="123456789"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_width="match_parent"
                android:layout_height="40dp">

                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_stime"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="@drawable/textfieldborderclr1"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:hint="12:00 AM"/>


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="@drawable/textfieldborderclr1"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:hint="8:00 PM"/>
                </LinearLayout>

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:id="@+id/btn_confirm"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="30dp"
                android:background="@mipmap/confirm_button"
                android:layout_gravity="center_horizontal">

            <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>