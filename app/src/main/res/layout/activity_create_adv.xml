                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[max 60 character]"
                android:textSize="10dp"
                android:textColor="#808080"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               >

                <ImageView
                    android:id="@+id/img_calander"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:background="@mipmap/select_date"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ffffff"/>

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textSize="14dp"
                    android:textColor="#808080"
                    android:layout_toRightOf="@+id/img_calander"
                    android:layout_marginLeft="10dp"
                   />

            </RelativeLayout>

                <LinearLayout

               android:layout_below="@+id/rel_date"
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#a9a9a9"/>

                <RelativeLayout
                    android:layout_marginLeft="80dp"
                    android:layout_toRightOf="@+id/rel_date"
                    android:id="@+id/rel_time"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                >

                    <ImageView
                        android:id="@+id/img_date"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@mipmap/down_arrow"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#ffffff"/>

                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/tv_strttym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Hrs:Mins"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="#808080"
                        android:textColorHint="#a9a9a9"
                        android:layout_toLeftOf="@+id/img_date"
                        android:layout_marginRight="40dp"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/rel_time"
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="#a9a9a9"/>
                <!--<Button-->
                    <!--android:id="@+id/btn_save"-->
