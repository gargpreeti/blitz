<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:orientation="vertical"
    android:background="@drawable/popupbck"

      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_cross"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:gravity="right"
         android:background="@drawable/crosswhite"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginBottom="1dp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:background="@mipmap/popup"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="First Name"
                android:alpha="0.6"
                android:padding="5dp"
                android:capitalize="sentences"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_below="@+id/ed_firstname"
                android:alpha="0.6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="200dp"
                android:background="#808080"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:capitalize="sentences"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="5dp"
                android:hint="Last Name"
                android:alpha="0.6"
                android:padding="5dp"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_below="@+id/ed_lastname"
                android:alpha="0.6"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="10dp"
                android:background="#808080"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>


        </RelativeLayout>

        <com.zoptal.blitz.common.EditTextView
            android:id="@+id/ed_cardnum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Card Number"
            android:alpha="0.6"
            android:padding="5dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16dp" />
        <LinearLayout
            android:alpha="0.6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#808080"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <com.zoptal.blitz.common.EditTextView
            android:id="@+id/ed_exp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Exp.[MM]"
            android:alpha="0.6"
                android:singleLine="true"
                android:imeOptions="actionNext"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16dp" />

            <Spinner
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Exp.[MM]"
                android:drawSelectorOnTop="false"
                android:id="@+id/list_mnth"
                android:textSize="18dp"

                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColorHint="#b2b2b2"
                android:textCursorDrawable="@drawable/blackcursor"
                android:singleLine="true"
                android:imeOptions="actionDone"
               />
        <LinearLayout
            android:layout_below="@+id/ed_exp"
            android:alpha="0.6"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="200dp"
            android:background="#808080"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>

        <com.zoptal.blitz.common.EditTextView
            android:id="@+id/ed_expy"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="5dp"
            android:hint="Exp.[yyyy]"
            android:alpha="0.6"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:textColor="#000000"
            android:textColorHint="#808080"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_below="@+id/ed_expy"
            android:alpha="0.6"
            android:layout_marginLeft="190dp"
            android:layout_marginRight="10dp"
            android:background="#808080"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_cardtype"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Card Type"
                android:alpha="0.6"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:textSize="16dp" />
            <LinearLayout
                android:layout_below="@+id/ed_cardtype"
                android:alpha="0.6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="200dp"
                android:background="#808080"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_cvv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="5dp"
                android:hint="CVV"
                android:alpha="0.6"
                android:padding="5dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:background="@android:color/transparent"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_below="@+id/ed_cvv"
                android:alpha="0.6"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="10dp"
                android:background="#808080"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_newcard"
            android:background="@mipmap/disablecircle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_newcard1"
                android:background="@drawable/circleselected"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"/>
        <com.zoptal.blitz.common.MyTextView
            android:id="@+id/tv_newcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Card For Further Use"
            android:textColor="#808080"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="55dp"
            android:textSize="14dp"
            android:alpha="0.7"
           />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/review_submit"/>
    </LinearLayout>

</LinearLayout>