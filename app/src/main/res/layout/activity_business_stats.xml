<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stats"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
</RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#a9a9a9"/>
            <com.zoptal.blitz.common.MyTextView
                android:id="@+id/tv_companyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Company Name"
                android:textSize="16dp"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"/>


            <LinearLayout
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:alpha="0.5"
                android:background="#a9a9a9"/>


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textfieldborderclr"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textSize="14dp"
                    android:text="View"/>

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:hint="0"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/eye_icon"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_view"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textfieldborderclr"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="#ffffff"
                    android:textSize="14dp"
                    android:text="Promo code Opened"/>

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_codeopened"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:hint="0 Times"/>

               </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relative_chngepw"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/textfieldborderclr1">

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_chngepw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:hint="Comments"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textSize="14dp"
                    />


                <ListView
                    android:layout_marginTop="40dp"
                    android:id="@+id/listview_rating"
                    android:background="#F1F1F1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"/>
                <com.zoptal.blitz.common.MyTextView
                    android:visibility="gone"
                    android:id="@+id/tv_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:hint="No rating list"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textSize="16dp"
                    />
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="preeti"
                    android:textAllCaps="false"
                    android:textColorHint="#808080"
                      android:textSize="14dp"

                    />
                <ImageView
                    android:id="@+id/img_star5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/tv_chngepw"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@mipmap/star_2"/>

                <ImageView
                    android:id="@+id/img_star4"
                   android:layout_toLeftOf="@+id/img_star5"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/tv_chngepw"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/star_2"/>

                <ImageView
                    android:id="@+id/img_star3"
                    android:layout_toLeftOf="@+id/img_star4"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/tv_chngepw"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/star_2"/>

                <ImageView
                    android:id="@+id/img_star2"
                    android:layout_toLeftOf="@+id/img_star3"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/tv_chngepw"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/star_2"/>

                <ImageView
                    android:id="@+id/img_star1"
                    android:layout_toLeftOf="@+id/img_star2"
                    android:layout_marginTop="25dp"
                    android:layout_below="@+id/tv_chngepw"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/star_1"/>




                <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/tv_name"
                    android:layout_marginTop="5dp"
                    android:background="#808080"></LinearLayout>


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                       android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="hiii"
                    android:textAllCaps="false"
                    android:textColorHint="#808080"
                    android:textSize="14dp"
                    android:layout_marginLeft="30dp"
                    android:layout_below="@+id/line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/ed_desc"
                    android:layout_marginTop="10dp"
                    android:background="#808080"></LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_populartime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="Popular Time and is viewed"
                    android:textAllCaps="false"
                    android:textColorHint="#000000"
                    android:textSize="14dp"
            />

                <ImageView
                    android:layout_below="@+id/tv_populartime"
                    android:id="@+id/img_st"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/watchstat"/>

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_stime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/tv_populartime"
                    android:layout_toRightOf="@+id/img_st"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="12:00"
                    android:textAllCaps="false"
                    android:textColorHint="#000000"
                    android:textSize="14dp"
                    />


                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/tv_populartime"
                    android:layout_toRightOf="@+id/tv_stime"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="To"
                    android:textAllCaps="false"
                    android:textColorHint="#000000"
                    android:textSize="14dp"
                    />

                <ImageView
                    android:layout_below="@+id/tv_populartime"
                    android:id="@+id/img_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tv_to"
                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/watchstat"/>

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_etime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_below="@+id/tv_populartime"
                    android:layout_toRightOf="@+id/img_et"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="15:00"
                    android:textAllCaps="false"
                    android:textColorHint="#000000"
                    android:textSize="14dp"
                    />

            </RelativeLayout>

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_previousadv"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:background="@mipmap/previous_advertisments_button"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>