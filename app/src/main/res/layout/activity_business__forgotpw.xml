<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backimg">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/backarrow"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_toRightOf="@+id/img_backarrow"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"/>
</RelativeLayout>


            <com.zoptal.blitz.common.EditTextView
        android:id="@+id/ed_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Enter Email"
        android:textColor="#ffffff"
                android:singleLine="true"
                android:imeOptions="actionDone"
        android:textColorHint="#ffffff"
      android:gravity="center"
        android:textSize="20dp"
        android:background="@android:color/transparent"/>
   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
     android:layout_gravity="center"
       android:layout_marginTop="10dp"
       android:background="@mipmap/line_1"/>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/submit_button"
        android:layout_marginTop="70dp"
        android:text="Submit"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>