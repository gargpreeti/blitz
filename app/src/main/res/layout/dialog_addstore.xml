        <RelativeLayout
            android:id="@+id/relative_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#FDEEEE">

            <AutoCompleteTextView
                android:id="@+id/ed_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Address"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="#a9a9a9"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:textCursorDrawable="@drawable/blackcursor"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#FDEEEE">

            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Phone num"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="#a9a9a9"
                android:textColor="#000000"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:inputType="number"
                android:textCursorDrawable="@drawable/blackcursor"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rel_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rel_account"
            android:layout_marginTop="10dp"
         >

       <LinearLayout

           android:layout_weight="1"
            android:id="@+id/relative_stime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="#FDEEEE">
            <com.zoptal.blitz.common.EditTextView
                android:id="@+id/ed_stime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Opening Time"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="#a9a9a9"
                android:textColor="#000000"
                android:textSize="14dp"
                android:padding="3dp"
                android:textCursorDrawable="@drawable/blackcursor"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
                android:id="@+id/relative_endtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:background="#FDEEEE">
                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Closing Time"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColorHint="#a9a9a9"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:padding="3dp"
                    android:textCursorDrawable="@drawable/blackcursor"
                    />


      </LinearLayout>
</LinearLayout>
