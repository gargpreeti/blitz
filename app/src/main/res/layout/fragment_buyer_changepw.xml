<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textfieldborderclr">

            <RelativeLayout
                android:id="@+id/relative_chngepw"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="1dp"
                android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_chngepw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="Change password"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textCursorDrawable="@drawable/blackcursor"
                    />

                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_oldpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="Old Password"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:textColorHint="#808080"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"
                    android:layout_below="@+id/tv_chngepw"
                    />
                <LinearLayout
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/ed_oldpw"
                    android:layout_marginTop="5dp"
                    android:alpha="0.3"
                    android:background="#a9a9a9"></LinearLayout>


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_newpw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="New Password"
                    android:textAllCaps="false"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColorHint="#808080"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"
                    android:layout_below="@+id/line"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/ed_newpw"
                    android:layout_marginTop="5dp"
                    android:alpha="0.3"
                    android:background="#a9a9a9"></LinearLayout>

            </RelativeLayout>
</RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textfieldborderclr">
            <RelativeLayout
                android:id="@+id/relative_chngeemail"
                android:layout_width="match_parent"
                android:layout_height="180dp"
             android:layout_margin="1dp"
                android:background="#ffffff">

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_chngeemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="Change email"
                    android:textColorHint="#000000"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textSize="18dp"
                    android:textCursorDrawable="@drawable/blackcursor"
                    />

                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_oldemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="Old email"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textAllCaps="false"
                    android:textColorHint="#808080"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"
                    android:layout_below="@+id/tv_chngeemail"
                    />
                <LinearLayout
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/ed_oldemail"
                    android:layout_marginTop="5dp"
                    android:alpha="0.3"
                    android:background="#a9a9a9"></LinearLayout>


                <com.zoptal.blitz.common.EditTextView
                    android:id="@+id/ed_newemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#808080"
                    android:hint="New email"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:textAllCaps="false"
                    android:textColorHint="#808080"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"
                    android:layout_below="@+id/line1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/ed_newemail"
                    android:layout_marginTop="5dp"
                    android:alpha="0.3"
                    android:background="#a9a9a9"></LinearLayout>
            </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:background="@drawable/confirm"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:textColor="#ffffff"/>
</LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>