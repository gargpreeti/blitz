                    <!--android:text="Save"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="20dp"-->
                    <!--android:textColor="#ffffff"/>-->

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textSize="12dp"
                    android:textColor="#808080"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    />
                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/txt_statrttym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Time"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="#808080"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="25dp"
                    />
                <RelativeLayout
                    android:layout_below="@+id/txt_statrttym"
                    android:id="@+id/rel_endtime"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/img_endtime"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:background="@mipmap/down_arrow"
                        android:layout_marginRight="20dp"
                        android:layout_alignParentRight="true"
                        android:textColor="#ffffff"/>

                    <com.zoptal.blitz.common.MyTextView
                        android:id="@+id/tv_endtym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Hrs:Mins"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="#808080"
                        android:textColorHint="#a9a9a9"
                        android:layout_toLeftOf="@+id/img_endtime"
                        android:layout_marginRight="40dp"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:layout_below="@+id/rel_endtime"
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="#a9a9a9"/>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.zoptal.blitz.common.MyTextView
                                android:id="@+id/txt_endtym"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Time"
                                android:textSize="12dp"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                                android:textColor="#808080"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="90dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="25dp"
                                />
                </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    >
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Individual Store"
                        android:id="@+id/radioButton_indivisualstore"
                        android:checked="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#808080"
                        />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Multiple Stores"
                        android:id="@+id/radioButton_multiplestore"
                        android:checked="false"
                        android:textSize="16dp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#808080"
                        />
                </RadioGroup>


            </RelativeLayout>
<RelativeLayout
