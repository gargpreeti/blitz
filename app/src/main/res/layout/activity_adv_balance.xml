<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1">

    <com.zoptal.blitz.common.InteractiveScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear"
            android:orientation="vertical">
<RelativeLayout
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_backarrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/backarrowgray"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <com.zoptal.blitz.common.MyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advertisement Balance"
                android:textSize="16dp"
                android:textColor="#000000"
            android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
           android:layout_centerHorizontal="true"/>
</RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/linr"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"></LinearLayout>

            <com.zoptal.blitz.common.MyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="16dp"
                android:layout_centerVertical="true"
                android:text="Remaining Credits:"/>
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="#625F5F"
                android:layout_width="35dp"
                android:layout_height="30dp">

            <com.zoptal.blitz.common.MyTextView
                android:id="@+id/tv_remaining_credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="18dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="0"/>
            </RelativeLayout>


        </RelativeLayout>
            <LinearLayout
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"></LinearLayout>
            <RelativeLayout
                android:layout_marginTop="15dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                 android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>

                <com.zoptal.blitz.common.MyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:textSize="16dp"
                    android:layout_centerVertical="true"
                    android:text="Package Option:"/>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:background="#625F5F"
                android:layout_width="35dp"
                android:layout_height="30dp">

                <com.zoptal.blitz.common.MyTextView
                    android:id="@+id/tv_packageoption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textColorHint="#ffffff"
                    android:textSize="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="1"/>
</RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="2dp"></LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:background="#ffffff"
                android:padding="1dp">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">
                </android.support.v4.view.ViewPager>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_purchase"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
               android:background="@mipmap/purchase_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        </com.zoptal.blitz.common.InteractiveScrollView>
    </LinearLayout>